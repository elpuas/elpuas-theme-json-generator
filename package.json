        "eslint": "^8.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-astro": "^0.31.0",
        "eslint-plugin-prettier": "^5.0.0",
        "prettier": "^3.0.0",
        "prettier-plugin-astro": "^0.12.0",
        "typescript": "^5.0.0"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/theme-json-generator.git"
    },
    "keywords": [
    "wordpress",
    "theme",
    "json",
    "generator",
    "astro",
    "web-app"
