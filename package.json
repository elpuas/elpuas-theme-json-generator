{
    "name": "elpuas-theme-json-generator",
    "version": "1.0.0",
    "description": "A web app built with Astro to create WordPress theme.json files via a user-friendly form",
    "type": "module",
    "scripts": {
        "dev": "astro dev",
        "start": "astro dev",
        "build": "astro build",
        "preview": "astro preview",
        "astro": "astro",
        "lint": "eslint . --ext .js,.ts,.astro",
        "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
        "format": "prettier --write .",
        "check": "astro check && tsc --noEmit"
    },
    "dependencies": {
        "astro": "^5.3.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
